<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="notification is danger">
      <h2 class="title is-5"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <% post.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label" %>
    <div class="control">
      <%= form.text_field :title, class: "input", placeholder: "Title of the post" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :body, class: "label" %>
    <div class="control">
      <%= form.text_area :body, class: "input", placeholder: "Body of the post" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :image, class: "label" %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit class: 'button is-link' %>
    </div>
  </div>
<% end %>
